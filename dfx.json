{
  "canisters": {
    "user": {
      "type": "motoko",
      "main": "backend/user/main.mo",
      "declarations": {
        "node_compatibility": true
      }
    },
    "product": {
      "type": "motoko",
      "main": "backend/product/main.mo",
      "declarations": {
        "node_compatibility": true
      }
    },
    "frontend": {
      "dependencies": ["user", "product"],
      "type": "assets",
      "source": ["dist/"]
    }
  },
  "defaults": {
    "build": {
      "packtool": "npm run --silent sources"
    }
  },
  "output_env_file": ".env",
  "version": 2
}
